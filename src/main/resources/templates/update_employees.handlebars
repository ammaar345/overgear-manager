<!doctype html>
<html lang="en">



<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>update employees</title>
</head>

<style>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:400,500&display=swap');
body {
 font-family: 'Montserrat', sans-serif;
  display: flex;
  flex-wrap: wrap;
  margin: 0;
}
nav {
  padding-top: 25px;
  background-color: #FFE4FA;
  border-right: 2px solid #A6E8E4;
  min-width: 200px;
  height: 100vh;
  font-size: 12px;
}
nav a {
  border-top: 1px solid #A6E8E4;
  color: #4F4F4F;
  display: block;
  padding: 15px;
  text-decoration: none;
}
nav a:hover {
    background-color: #A6E8E4;
    }
main {
  flex: 1;
  padding: 20px;
  max-height: 100vh;
  overflow-y: scroll;
}
section {
  padding: 15px;
  line-height: 1.5;
}
header {
  font-size: 15px;
  font-weight: 500;
  word-wrap: break-word;
}
.header-padding {
    padding: 25px;
    background-color: #A6E8E4
    }
pre {
  padding-top: 14px;
  background-color: #A6E8E4
}
.content, #number {
  width: 100%;
  padding: 30px
  }
label  {
  padding: 50px;
}
input {
  display: flex;
}
input[type=submit]:hover {
  background-color: #A6E8E4;
}
input[type=submit] {
  width: 100%;
  background-color: #FFE4FA;
  color: white;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  color: #1C2833;
}
input[type=text], select {
  width: 100%;
  padding: 12px 20px 12px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}
div.parentElement{
    text-align: center;
    }
.btn-work {
    width: 250px;
    height: 50px;
    margin: 0 auto;
    padding: 0;
    display: inline-block;
    line-height: 50px;
    text-align: center;
}

@media (max-width: 600px){
  body {
    flex-direction: column;
  }
  nav {
    border-right: none;
    border-bottom: 2px solid #FFE4FA;
    height: 300px;
    overflow-y: scroll;
    width: 100%
  }
  main {
    height: auto;
    width: 100%;
    overflow-y: none;
    text-align: center;
  }
.content {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}
.container bg-faded {
    display: flex;
    flex-direction: row;
}
}

th, td {
        padding: 10px;
        border: 1px solid black;
        }
</style>


<body>

<nav id="navbar">
    <div class="header-padding">
        <header id="header">THE OVERGEARED</header>
        <header id="header">RESTAURANT WAITER</header>
        <header id="header">CHAMBERS</header>
    </div>

    <a class="nav-link" href="/manager_chamber">ROSTER SCHEDULE</a>
    <a href="/absence_report" class="nav-link">ABSENCE REPORT</a>
    <a href="/update_employees" class="nav-link">UPDATE EMPLOYEES</a>
    <a href="/" class="nav-link">HOME</a>
</nav>

<div class="container bg-faded">

    <div class="content">
        <h1 style="color: rgb(10, 134, 156);" class="text-center">UPDATE SCHEDULED SHIFTS</h1>
    </div>

    <div>

        <form action="/add_employees" method="POST">
            <div class="content">
                <table class=" table table-bordered text-dark" >
                    <tr>

                        {{#each days}}
                            <th>
                                {{this}}

                            </th>
                        {{/each}}

                    </tr>


                    <tr>

                        <td scope="col">
                            {{#each waiters1}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">
                            {{#each waiters2}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">
                            {{#each waiters3}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">

                            {{#each waiters4}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">

                            {{#each waiters5}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">
                            {{#each waiters6}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                        <td scope="col">

                            {{#each waiters7}}
                                <li>{{this}}</li>

                            {{/each}}

                        </td>
                    </tr>
                    </tbody>

                </table>

            </div>

            <form action="/update_employees" method="post">
                {{#each weekday}}
                    <label for="" class="pl-5 px-3 ">{{this}}</label><input type="checkbox" value="{{this}}"
                                                                            name="chkDays" class="checkbox">
                {{/each}}

                <input type=text name="employeeName" id="inputName" class="employee " placeholder="Employee">

                <input type="submit" value="Submit">

            </form>

    <form action="/clear_employees" method="get">
        <a href="/clear_employees"><input type="submit" text="bread" value="Remove All Waiters">
        </a>



    </div>

</div>
</div>

</body>