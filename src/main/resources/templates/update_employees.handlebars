<style>
table, th, td{
border: 1px solid black;
}
table{
width:50%;
border-collapse: collapse;
}

body {
  margin: 0;
  font-family: "Lato", sans-serif;
}

.sidebar {
  margin: 0;
  padding: 0;
  width: 200px;
  background-color: #f1f1f1;
  position: fixed;
  height: 100%;
  overflow: auto;
}

.sidebar a {
  display: block;
  color: black;
  padding: 16px;
  text-decoration: none;
}

.sidebar a.active {
  background-color: #04AA6D;
  color: white;
}

.sidebar a:hover:not(.active) {
  background-color: #555;
  color: white;
}

div.content {
  margin-left: 200px;
  padding: 1px 16px;
  height: 1000px;
<!--  float: none;-->
}

@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}
</style>


<body>
<div class="container bg-faded">
    <h1 style="color: rgb(10, 134, 156);" class="text-center">Welcome To The Overgeared Restaurant Manager</h1>

    <div class="row">
    </div>
    <hr>
    <form action="/add_employees" method="POST">

        <div class="sidebar">
            <header id="header" class="">THE OVERGEARED RESTAURANT MANAGER CHAMBERS</header>
            <a class="nav-link" href="/manager_chamber">ROSTER SCHEDULE</a>
            <a href="/absence_report" class="nav-link">ABSENCE REPORT</a>
            <a href="/update_employees" class="nav-link">UPDATE EMPLOYEES</a>
            <a href="/" class="nav-link">HOME</a>

        </div>
        <div class="content">
        <header>UPDATE EMPLOYEES</header>
  <table class=" table table-bordered text-dark">
<tr>

  							{{#each days}}
  							<th>
  								{{this}}

</th>
  								{{/each}}

</tr>


  					<tbody>
  						<tr>

  							{{#each days}}

  							<td scope="col">
  								{{#each waiters}}
  								<li>{{this}}</li>

  								{{/each}}

  							</td>

  							{{/each}}

  						</tr>

  					</tbody>

  				</table>
    </form>
    <br>
    <label for="" class="sr-only">Employees Information</label>
    <input type=text name="waiterName" id="inputName" class="employee" placeholder="Employee" >

    <a href="/add_employees">
        <input type="submit" value="Add Waiter" class="bg-primary">
    </a>

    <h1>Scheduled Shifts:</h1>

            <form action="/update_employees" method="post">
            {{#each weekday}}
                <label for="" class="pl-5 px-3 ">{{this}}</label><input type="checkbox" value="{{this}}"
                name="chkDays" class="checkbox">
            {{/each}}

            <input type=text name="employeeName" id="inputName" class="employee " placeholder="Employee" >

                <input type="submit" value="Submit">
        </div>


    </form>

</div>
<form action="/clear_employees" method="post">
   <input type="submit" text="bread" value="Remove All Waiters" class="bg-dark">

             </form>
</div>

</div>

</body>